<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>
			<tab id="tabProductivity" label="Productivity Tools" keytip="P">
				<!-- Ultra-Simple Format Group - NO BOXES -->
				<group id="grpFormat" label="Format">
					<button id="btnAlignLeft" imageMso="AlignLeft" size="large" onAction="OnAlignClick" label="Align Left"/>
					<button id="btnAlignCenter" imageMso="AlignCenter" size="large" onAction="OnAlignClick" label="Align Center"/>
					<button id="btnSameWidth" imageMso="ColumnWidth" size="normal" onAction="OnSameSizeClick" screentip="Same Width" supertip="Adjust width of other shapes to the shape of the first selection"/>
					<button id="btnSameHeight" imageMso="RowHeight" size="normal" onAction="OnSameSizeClick" screentip="Same Height" supertip="Adjust height of other shapes to the shape of the first selection"/>
					<button id="btnSameSize" imageMso="SizeToFit" size="normal" onAction="OnSameSizeClick" screentip="Same Size" supertip="Adjust size of other shapes to the shape of the first selection"/>
					<button id="btnCopyPosition" imageMso="Copy" size="normal" onAction="OnPositionClick" screentip="Copy Position" supertip="Copy position of other shapes to the shape position of the first selection"/>
					<button id="btnPastePosition" imageMso="Paste" size="normal" onAction="OnPositionClick" screentip="Paste Position" supertip="Paste position of other shapes to the shape position of the first selection"/>
				</group>

				<!-- Keep working groups -->
				<group id="grpPaste" label="Paste">
					<button id="btnPastePlainText" imageMso="MessageFormatPlainText" size="large" onAction="OnPastePlainText" label="Plain Text"/>
					<button id="btnPasteDestinationTheme" imageMso="PasteDestinationFormatting" size="large" onAction="OnPasteDestinationTheme" label="Destination Style"/>
					<button id="btnPasteSourceFormatting" imageMso="PasteSourceFormatting" size="large" onAction="OnPasteSourceFormatting" label="Source Style"/>
					<button id="btnPasteImage" imageMso="PasteAsPicture" size="large" onAction="OnPasteImage" label="Paste Image"/>
				</group>

				<group id="grpLibrary" label="Library">
					<button id="btnSaveSlide" imageMso="SaveSelectionToCoverPageGallery" size="large" onAction="OnSaveSlideClick" label="Save Slide"/>
					<button id="btnShowLibrary" imageMso="SaveSentItemOtherFolder" size="large" onAction="OnShowLibraryClick" label="Show Library"/>
				</group>

				<!-- Mermaid Diagram -->
				<group id="grpDiagram" label="Diagrams">
					<button id="btnInsertMermaid"
							label="Insert Mermaid"
							size="large"
							imageMso="ChartInsert"
							onAction="OnInsertMermaidClick"
							screentip="Insert Mermaid Diagram"
							supertip="Render Mermaid.js code into a PowerPoint shape"/>
				</group>
				
			</tab>
		</tabs>
	</ribbon>
</customUI>